{
  "name": "dot-com",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.dot-com.desktop",
    "productName": "DOT COM",
    "publish": [
      {
        "provider": "github",
        "owner": "MkDesignWeb",
        "repo": "dot-com"
      }
    ]
  },
   "files": [
    "dist_react/**/*",
    "dist-electron/**/*",
    "package.json"
  ],
  "win": {
    "target": "nsis"
  },
  "scripts": {
    "build:electron": "tsc -p electron && tsc -p electron/tsconfig.preload.json",
    "dev": "npm run build:electron && concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npm run build-react && npm run build-electron && tsc -p electron/tsconfig.preload.json",
    "build-react": "vite build",
    "build-electron": "tsc -p electron/tsconfig.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.7.3",
    "face-api.js": "^0.22.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "sass": "^1.97.3",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}
